   //  {IDEN}
// --------------------------------------------------------------------

Program : Statement
        ;

Statement : IF '(' Expression ')' Statement ELSE Statement
		  | '{' StatementList '}'
		  | Expression ';'
		  | Type IDEN ';'
		  ;
Type : INT
	 | BOOL
	 ;
StatementList : StatementList Statement
			  | /* empty */
			  ;

Expression : NUMBER
		   | IDENT
		   | Expression '=' Expression
		   | Expression '+' Expression
		   | Expression '<' Expression
		   ;

